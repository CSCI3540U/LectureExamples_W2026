extends toplevel 
block content 
    h1= title 

    div(class="error")= errorMessage 

    form(method="post", action="/processLogin", class="form")
        label(class="label row1", for="email") E-Mail:
        input(type="text",
              id="email",
              name="email",
              placeholder="your@email.com",
              class="control row1")

        label(class="label row2", for="password") Password:
        input(type="password",
              id="password",
              name="password",
              class="control row2")

        button(class="control row3") Log In